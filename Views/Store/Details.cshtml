@model Udem.LlamaClothingCo.Entities.Item

@{
    ViewBag.Title = "Product Detail " ;
}

<h2>@Model.Name</h2>

<p>
    <img src="http://placehold.it/1000x1000&text=Thumbnail">
</p>

<div id="item-details">
    <p>
        <em>Description:</em>
        @Model.Description
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Cost)
    </p>
    <p class="button">
        @Html.ActionLink("Add to cart", "AddToCart", 
        "ShoppingCart", new { id = Model.ItemId}, "")
    </p>
</div>